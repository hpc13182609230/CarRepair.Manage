@using ViewModels.CarRepair;
@using Service;
@{
    ViewBag.Title = "修理厂详情";
    Layout = "~/Views/Shared/_Layout.cshtml";
    GarageModel model = ViewBag.model as GarageModel;
}


@section header{
    @Html.Raw("<link type=\"text/css\" href=\"/media/css/bootstrap-fileupload.css\" rel=\"stylesheet\" />")
    @Html.Raw("<link type=\"text/css\" href=\"/media/css/datepicker.css\" rel=\"stylesheet\" />")
    @Html.Raw("<link type=\"text/css\" href=\"/media/css/jquery.fancybox.css\" rel=\"stylesheet\" />")
    @Html.Raw("<link type=\"text/css\" href=\"/media/css/search.css\" rel=\"stylesheet\" />")
}

<!-- BEGIN PAGE CONTAINER-->
<div class="container-fluid">
    <!-- BEGIN PAGE HEADER-->
    <div class="row-fluid">
        <div class="span12">
            <!-- BEGIN PAGE TITLE & BREADCRUMB-->
            <h3 class="page-title">
                修理厂详情
            </h3>
        </div>
    </div>
    <!-- END PAGE HEADER-->
    <!-- BEGIN PAGE CONTENT-->
    <div class="row-fluid">
        <div class="span12">
            <div class="portlet box blue">

                <div class="portlet-title">
                    <div class="caption"><i class="icon-reorder"></i>表单</div>
                    <div class="tools">
                        <a href="javascript:;" class="collapse"></a>
                        <a href="#portlet-config" data-toggle="modal" class="config"></a>
                        <a href="javascript:;" class="reload"></a>
                        <a href="javascript:;" class="remove"></a>
                    </div>
                </div>

                <div class="portlet-body form">
                    <!-- BEGIN FORM-->
                    <div id="form" class="form-horizontal" onsubmit="return false" ModelID="@(model.ID)">
                        <div class="control-group">
                            <label class="control-label">店铺名称</label>
                            <div class="controls">
                                <input id="CompanyName" type="text" class="span6 m-wrap" value="@(model.CompanyName)" />
                                @*<span class="help-inline">Some hint here</span>*@
                            </div>
                        </div>

                        <div class="control-group">
                            <label class="control-label">老板名称</label>
                            <div class="controls">
                                <input id="BossName" type="text" class="span6 m-wrap" value="@(model.BossName)" />
                            </div>
                        </div>

                        <div class="control-group">
                            <label class="control-label">手机号</label>
                            <div class="controls">
                                <input id="Phone" type="text" class="span6 m-wrap" value="@(model.Phone)" />
                                <span class="help-inline">用户的唯一标识 修改请慎重</span>
                            </div>
                        </div>

                        <div class="control-group">
                            <label class="control-label">电话号码</label>
                            <div class="controls">
                                <input id="Mobile" type="text" class="span6 m-wrap" value="@(model.Mobile)" />
                            </div>
                        </div>

                        <div class="control-group">
                            <label class="control-label">是否是我们的用户</label>
                            <div class="controls">
                                <input id="IsCheck" type="text" class="span6 m-wrap" value="@(model.IsCheck)" />
                            </div>
                        </div>

                        <div class="control-group">
                            <label class="control-label">备注</label>
                            <div class="controls">
                                <input id="Remark" type="text" class="span6 m-wrap" value="@(model.Remark)" />
                            </div>
                        </div>

                        <div class="form-actions">
                            <button id="save" class="btn blue">Submit</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- END PAGE CONTENT-->
</div>
<!-- END PAGE CONTAINER-->

@section scripts {
    @Html.Raw("<script src=\"/Scripts/action/Garage-GarageDetail.js" + "?v=" + DateTime.Now.ToString("yyyyMMddHHmmss") + "\" type=\"text/javascript\"></script>")
}

