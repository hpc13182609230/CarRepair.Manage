@using ViewModels.CarRepair;
@{
    ViewBag.Title = "DXPJ";
    Layout = "~/Views/Shared/_Layout.cshtml";
    List<PartsClassifyModel> _PartsClassifyModels = ViewBag.PartsClassify as List<PartsClassifyModel>;
}

@section header{
@Html.Raw("<link type=\"text/css\" href=\"/media/css/bootstrap-fileupload.css\" rel=\"stylesheet\" />")
    @Html.Raw("<link type=\"text/css\" href=\"/media/css/datepicker.css\" rel=\"stylesheet\" />")
    @Html.Raw("<link type=\"text/css\" href=\"/media/css/jquery.fancybox.css\" rel=\"stylesheet\" />")
    @Html.Raw("<link type=\"text/css\" href=\"/media/css/search.css\" rel=\"stylesheet\" />")
}

<div id="portlet-config" class="modal hide">
    <div class="modal-header">
        <button data-dismiss="modal" class="close" type="button"></button>
        <h3>添加分类</h3>
    </div>
    <div class="modal-body">
        <div class="form-horizontal">

            <div class="control-group">
                <label class="control-label">名称</label>
                <div class="controls">
                    <input id="Content" type="text" class="m-wra tags" value="">
                </div>
            </div>

            <div class="control-group">
                <label class="control-label">展示图标</label>
                <div class="controls">
                    <div class="fileupload fileupload-new" data-provides="fileupload">
                        <div class="input-append">
                            <div class="uneditable-input">
                                <i class="icon-file fileupload-exists"></i>
                                <span class="fileupload-preview"></span>
                            </div>
                            <span class="btn btn-file">
                                <span class="fileupload-new">Select file</span>
                                <span class="fileupload-exists">Change</span>
                                <input type="file" class="default">
                            </span>
                            <a href="#" class="btn fileupload-exists" data-dismiss="fileupload">Remove</a>
                        </div>
                    </div>
                </div>
            </div>

            <button id="save" class="btn blue" PartsClassifyID="" OptionID="@ViewBag.OptionID"  >保存</button>
        </div>
    </div>
</div>

<!-- BEGIN PAGE CONTAINER-->
<div class="container-fluid">
    <!-- BEGIN PAGE HEADER-->
    <div class="row-fluid">
        <div class="span12">
            <!-- BEGIN PAGE TITLE & BREADCRUMB-->
            <h3 class="page-title">
                @(ViewBag.name)列表
            </h3>
            <!-- END PAGE TITLE & BREADCRUMB-->
        </div>
    </div>
    <!-- END PAGE HEADER-->
    <!-- BEGIN PAGE CONTENT-->
    <div class="row-fluid">
        <div class="tabbable tabbable-custom tabbable-full-width">

            <div id="tab_1_5" class="tab-pane">
                <div class="row-fluid search-forms search-default">
                    <form action="#">
                        <div class="clearfix margin-bottom-20">
                            <div class="control-group pull-left margin-right-20">
                                <label class="control-label">Check-in:</label>
                                <div class="controls">
                                    <div class="input-append date date-picker" data-date="12-02-2012" data-date-format="dd-mm-yyyy" data-date-viewmode="years">
                                        <input class="m-wrap m-ctrl-medium date-picker" size="16" type="text" value="12-02-2012" /><span class="add-on"><i class="icon-calendar"></i></span>
                                    </div>
                                </div>
                            </div>
                            <div class="control-group pull-left">
                                <label class="control-label">Check-out:</label>
                                <div class="controls">
                                    <div class="input-append date date-picker" data-date="102/2012" data-date-format="mm/yyyy" data-date-viewmode="years" data-date-minviewmode="months">
                                        <input class="m-wrap m-ctrl-medium date-picker" size="16" type="text" value="02/2012" /><span class="add-on"><i class="icon-calendar"></i></span>
                                    </div>
                                </div>
                            </div>
                            <div class="control-group pull-right">
                                <a id="add" href="javascript:" class="btn blue"><i class="icon-plus"></i>添加分类</a>
                            </div>


                        </div>
                        <div class="chat-form">
                            <div class="input-cont">
                                <input type="text" placeholder="Search..." class="m-wrap" />
                            </div>
                            <button type="button" class="btn green">Search &nbsp; <i class="m-icon-swapright m-icon-white"></i></button>
                        </div>
                    </form>
                </div>
                <div class="portlet-body">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th class="hidden-phone">ID</th>
                                <th class="hidden-phone">Photo</th>
                                <th class="hidden-phone">名称</th>
                                <th class="hidden-phone">创建时间</th>
                                <th>功能</th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in _PartsClassifyModels)
                            {
                                <tr id="@item.ID">
                                    <td class="hidden-phone">@item.ID</td>
                                    <td><img src="/media/image/avatar1.jpg" alt="" /></td>
                                    <td class="hidden-phone">@item.Content</td>
                                    <td class="hidden-phone">@((item.CreateTime??DateTime.MinValue).ToString("yyyy-MM-dd HH:mm"))</td>
                                    <td>
                                        <a href="/PartsType/PartsClassifyCompany?PartsClassifyID=@(item.ID)&Content=@(item.Content)"> <span class="label label-success">查看详细</span></a>
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>

        </div>
        <!--end tabbable-->
    </div>
    <!-- END PAGE CONTENT-->
</div>
<!-- END PAGE CONTAINER-->

@section scripts {
    @Html.Raw("<script src=\"/media/js/bootstrap-datepicker.js\" type=\"text/javascript\"></script>")
    @Html.Raw("<script src=\"/media/js/jquery.fancybox.pack.js\" type=\"text/javascript\"></script>")
    @Html.Raw("<script src=\"/media/js/search.js\" type=\"text/javascript\"></script>")

    @Html.Raw("<script src=\"/Scripts/action/PartsType-PartsClassfy.js" + "?v=" + DateTime.Now.ToString("yyyyMMddHHmmss") + "\" type=\"text/javascript\"></script>")
}




