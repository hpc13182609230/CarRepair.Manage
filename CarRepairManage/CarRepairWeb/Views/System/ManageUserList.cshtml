@using ViewModels.CarRepair;
@{
    ViewBag.Title = "系统用户";
    Layout = "~/Views/Shared/_Layout.cshtml"; ;
    List<ManageUserModel> models = ViewBag.models as List<ManageUserModel>;
}

@section header{
    @Html.Raw("<link type=\"text/css\" href=\"/media/css/datepicker.css\" rel=\"stylesheet\" />")
    @Html.Raw("<link type=\"text/css\" href=\"/media/css/jquery.fancybox.css\" rel=\"stylesheet\" />")
    @Html.Raw("<link type=\"text/css\" href=\"/media/css/search.css\" rel=\"stylesheet\" />")
}

<!-- BEGIN PAGE CONTAINER-->
<div class="container-fluid">
    <!-- BEGIN PAGE HEADER-->
    <div class="row-fluid">
        <div class="span12">
            <!-- BEGIN PAGE TITLE & BREADCRUMB-->
            <h3 class="page-title">
                系统用户列表
            </h3>
            <div class="control-group pull-right">
                <a href="/System/ManageUserDetail" class="btn blue"><i class="icon-plus"></i>添加用户</a>
            </div>
            <!-- END PAGE TITLE & BREADCRUMB-->
        </div>
    </div>
    <!-- END PAGE HEADER-->
    <!-- BEGIN PAGE CONTENT-->
    <div class="row-fluid">
        <div class="tabbable tabbable-custom tabbable-full-width">

            <div id="tab_1_5" class="tab-pane">
                <div class="row-fluid search-forms search-default">
                </div>
                <div class="portlet-body">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>登录名称</th>
                                @*<th>微信昵称</th>
                                <th>头像</th>*@
                                <th>管理省份</th>
                                @*<th class="hidden-phone">后台权限</th>*@
                                <th class="hidden-phone">创建时间</th>
                                <th class="hidden-phone">上次登录时间</th>
                                <th>操作</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in models)
                            {
                            <tr id="@(item.ID)" Openid="@item.Openid">
                                <th>@item.LoginName</th>
                                @*<th>@item.LoginName</th>
                                <th>@item.Avatar</th>*@
                                <th>@item.Province</th>
                                @*<th>@item.Permission</th>*@
                                <th class="hidden-phone">@item.CreateTime.ToString("yyyy-MM-dd HH:mm:ss")</th>
                                <th class="hidden-phone">@item.LastActiveTime.ToString("yyyy-MM-dd HH:mm:ss")</th>
                                <td>
                                    <div name="" class="btn mini red-stripe">禁用</div>
                                    <div name="goDetail" class="btn mini red-stripe">查看详情</div>
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>

                @*@Html.Partial("_Pager", ViewBag.Page as ViewModels.PageInfoModel)*@
            </div>

        </div>
        <!--end tabbable-->
    </div>
    <!-- END PAGE CONTENT-->
</div>
<!-- END PAGE CONTAINER-->

@section scripts {
    @Html.Raw("<script src=\"/Scripts/action/System-ManageUserList.js" + "?v=" + DateTime.Now.ToString("yyyyMMddHHmmss") + " type=\"text/javascript\"></script>")
}



