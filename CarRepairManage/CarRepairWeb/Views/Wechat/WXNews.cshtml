@using ViewModels.CarRepair;
@{
    ViewBag.Title = "服务号图文";
    Layout = "~/Views/Shared/_Layout.cshtml"; ;
    List<WXNewsModel> models = ViewBag.models as List<WXNewsModel>;
}

@section header{
    @Html.Raw("<link type=\"text/css\" href=\"/media/css/datepicker.css\" rel=\"stylesheet\" />")
    @Html.Raw("<link type=\"text/css\" href=\"/media/css/jquery.fancybox.css\" rel=\"stylesheet\" />")
    @Html.Raw("<link type=\"text/css\" href=\"/media/css/search.css\" rel=\"stylesheet\" />")
}

<!-- BEGIN PAGE CONTAINER-->
<div class="container-fluid">
    <!-- BEGIN PAGE HEADER-->
    <div class="row-fluid">
        <div class="span12">
            <!-- BEGIN PAGE TITLE & BREADCRUMB-->
            <h3 class="page-title">
                服务号图文列表
            </h3>
            <!-- END PAGE TITLE & BREADCRUMB-->
        </div>
    </div>
    <!-- END PAGE HEADER-->
    <!-- BEGIN PAGE CONTENT-->
    <div class="row-fluid">
        <div class="tabbable tabbable-custom tabbable-full-width">

            <div id="tab_1_5" class="tab-pane">
                <div class="row-fluid search-forms search-default">
                </div>
                <div class="portlet-body">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>标题</th>
                                @*<th class="hidden-phone">链接</th>*@
                                <th class="hidden-phone">创建时间</th>
                                <th class="hidden-phone">更新时间</th>
                                <th>操作</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in models)
                            {
                            <tr id="@(item.NewsID)" Unionid="@item.NewsID">
                                <td class="hidden-phone" width="100">@(item.NewsID)</td>
                                <td>@(item.Articles.FirstOrDefault().Title)</td>
                                @*<td class="hidden-phone">@(item.Articles.FirstOrDefault().Url)</td>*@
                                <td class="hidden-phone">@(Convert.ToDateTime(item.Articles.FirstOrDefault().CreateTime).ToString("yyyy-MM-dd HH:mm:ss"))</td>
                                <td class="hidden-phone">@(Convert.ToDateTime(item.Articles.FirstOrDefault().UpdateTime).ToString("yyyy-MM-dd HH:mm:ss"))</td>
                                <td>
                                    <div name="WXNewsPush" class="btn mini red-stripe"  NewsID="@item.NewsID">推送</div>
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>

                @*@Html.Partial("_Pager", ViewBag.Page as ViewModels.PageInfoModel)*@
            </div>

        </div>
        <!--end tabbable-->
    </div>
    <!-- END PAGE CONTENT-->
</div>
<!-- END PAGE CONTAINER-->

@section scripts {
    @Html.Raw("<script src=\"/Scripts/action/Wechat-WXNews.js" + "?v=" + DateTime.Now.ToString("yyyyMMddHHmmss") + " type=\"text/javascript\"></script>")
}



